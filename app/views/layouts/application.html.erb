<!DOCTYPE html>
<html>
  <head>
    <title>CharacterDistanceApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!-- header -->
        <header>
            <div class="header-content">
                <div class="header-icon">
                    <a href="/">
                            <p><span>C</span>haracter</p>
                            <p><span>D</span>istance</p>
                            <p><span>A</span>pplication</p>
                    </a>
                </div>
                    <ul>
                        <% if @current_user %>
                            <li>
                                <%= link_to "/users/#{@current_user.id}", {class: "header-menu"} do %>
                                    mypage<br>マイページ
                                <% end %>
                            </li>
                            <li>
                                <a href="/posts/new">
                                    <p class="header-menu">new post</p>
                                    <p>新規投稿</p>
                                </a>
                            </li>
                            <li>
                                <a href="/posts/index">
                                    <p class="header-menu">Total distance</p>
                                    <p>総文字距離</p>
                                </a>
                            </li>
                            <li>
                                <%= link_to "/logout", {class: "header-menu",method: :post} do %>
                                    logout<br>ログアウト
                                <% end %>
                            </li>
                        <% else %>
                            <li>
                                <a href="/signup">
                                    <p class="header-menu">signup</p>
                                    <p>サインアップ</p>
                                </a>
                            </li>
                            <li>
                                <a href="/login">
                                    <p class="header-menu">login</p>
                                    <p>ログイン</p>
                                </a>
                            </li>
                        <% end %>
                    </ul>
            </div>
        </header>
        
        <% if flash[:notice] %>
          <div class="flash">
            <%= flash[:notice] %>
          </div>
        <% end %>
    
    <%= yield %>
    
    <!-- footer -->
        <footer>
            <div class="footer-container">
                <ul>
                    <li>
                        <a href="/">CDA</a>
                    </li>
                    <li>
                        <ul>
                            <% if @current_user %>
                                <li>
                                    <a href="/posts/new">new post</a>
                                </li>
                                <li>
                                    <a href="/posts/index">Total distance</a>
                                </li>
                                <li>
                                    <a href="/logout">logout</a>
                                </li>
                            <% else %>
                                <li>
                                    <a href="/signup">signup</a>
                                </li>
                                <li>
                                    <a href="/login">login</a>
                                </li>
                            <% end %>
                        </ul>
                    </li>
                </ul>
            </div>
        </footer>
        
        
        <!-- copyright -->
        <div class="copyright">
            <p>Copyright © 2018 CDA All Rights Reserved.</p>
        </div>
  </body>
</html>
