<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        
        <link rel="stylesheet" href="/character_distance_app/app/assets/stylesheets/users.scss">
    </head>
    
    <body>
        
        <div class="users-new">
            <div class="container">
                <div class="form-heading">
                    <h2>signup</h2>
                    <p>サインアップ</p>
                </div>
                <div class="form-body">
                    
                    <!-- error-message -->
                    <% @user.errors.full_messages.each do |message| %>
                        <div class="form-error">
                            <%= message %>
                        </div>
                    <% end %>
                    
                    <!-- signup page -->
                    <%= form_tag("/users/create") do %>
                        <div class="form-table">
                            <div class="form-menu">
                                <div class="form-name">
                                    <p>ユーザー名</p>
                                </div>
                                <div class="form-value">
                                    <input name="name">
                                </div>
                            </div>
                            <div class="form-menu">
                                <div class="form-name">
                                    <p>メールアドレス</p>
                                </div>
                                <div class="form-value">
                                    <input name="email">
                                </div>
                            </div>
                            <div class="form-menu">
                                <div class="form-name">
                                    <p>パスワード</p>
                                </div>
                                <div class="form-value">
                                    <input type="password" name="password">
                                </div>
                            </div>
                        </div>
                        <input type="submit" value="サインアップ">
                    <% end %>
                </div>
            </div>
        </div>

    </body>
</html>
