<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        
        <link rel="stylesheet" href="/character_distance_app/app/assets/stylesheets/users.scss">
    </head>
    
    <body>
        
        <div class="user-show">
            <div class="container">
                
                <div class="form-heading">
                    <h2><%= @user.name %></h2>
                </div>
                
                <div class="total-distance">
                    <div class="total-distance-left">
                        <p>合計距離</p>
                    </div>
                    <div class="total-distance-right">
                        <p><%= @total_distance.sum_user_contentdistance(@posts) %>m</p>
                    </div>
                </div>
                
                <% @posts.each do |post| %>
                    <div class="posts">
                        <div class="posts-date">
                            <p><%= post.updated_at %></p>
                        </div>
                        <div class="posts-string">
                            <%= link_to(post.content, "/posts/#{post.id}/edit") %>
                        </div>
                        <div class="posts-distance">
                            <p><%= post.content_distance %>m</p>
                        </div>
                    </div>
                <% end %>
                
            </div>
        </div>
        
    </body>
</html>
