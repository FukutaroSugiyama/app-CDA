<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        
        <link rel="stylesheet" href="/character_distance_app/app/assets/stylesheets/users.scss">
    </head>
    
    <body>
        
        <div class="users-new">
            <div class="container">
                <div class="form-heading">
                    <h2>login</h2>
                    <p>ログイン</p>
                </div>
                <div class="form-body">
                    
                    <!-- error-message -->
                    <% if @error_message %>
                      <div class="form-error">
                        <%= @error_message %>
                      </div>
                    <% end %>
                    
                    <!-- login page -->
                    <%= form_tag("/login") do %>
                        <div class="form-table">
                            <div class="form-menu">
                                <div class="form-name">
                                    <p>メールアドレス</p>
                                </div>
                                <div class="form-value">
                                    <input name="email" value="<%= @email %>">
                                </div>
                            </div>
                            <div class="form-menu">
                                <div class="form-name">
                                    <p>パスワード</p>
                                </div>
                                <div class="form-value">
                                    <input type="password" name="password" value="<%= @password %>">
                                </div>
                            </div>
                        </div>
                        <input type="submit" value="ログイン">
                    <% end %>
                </div>
            </div>
        </div>
    </body>
</html>
