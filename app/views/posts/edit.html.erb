<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        
        <link rel="stylesheet" href="/character_distance_app/app/assets/stylesheets/posts.scss">
    </head>
    
    <body>
        
        <div class="posts-edit">
            <div class="container">
                
                <div class="heading">
                    <h2><%= @current_user.name %></h2>
                </div>
                
                <div class="posts-container">
                    <%= form_tag("/posts/#{@post.id}/update") do %>
                        <div class="posts-form">
                            <textarea name="string"><%= @post.content %></textarea>
                        </div>
                        <input type="submit" value="編集">
                    <% end %>
                </div>
            </div>
        </div>
    </body>
</html>
